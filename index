  <script>
    const defaultConfig = {
      title_text: "To Our Amazing Teacher",
      greeting_message: "Happy Teacher's Day!",
      appreciation_text: "Thank you for lighting the way and inspiring us to reach for the stars. Your wisdom and kindness make every day brighter!",
      closing_text: "With love and gratitude,",
      student_names: "The Class of 2025",
      background_color: "#2C5530",
      card_color: "#1A3A1F",
      text_color: "#F5F5DC",
      accent_color: "#FFD700",
      font_family: "Georgia",
      font_size: 16
    };

    async function onConfigChange(config) {
      const baseSize = config.font_size || defaultConfig.font_size;
      const customFont = config.font_family || defaultConfig.font_family;
      const baseFontStack = 'serif, system-ui';
      const fontFamily = `${customFont}, ${baseFontStack}`;

      const backgroundColor = config.background_color || defaultConfig.background_color;
      const cardColor = config.card_color || defaultConfig.card_color;
      const textColor = config.text_color || defaultConfig.text_color;
      const accentColor = config.accent_color || defaultConfig.accent_color;

      document.querySelector('.page-wrapper').style.backgroundColor = backgroundColor;
      document.querySelector('.chalkboard-card').style.backgroundColor = cardColor;
      document.querySelector('.separator-line').style.backgroundColor = textColor;

      const corners = document.querySelectorAll('.corner-decoration');
      corners.forEach(corner => {
        corner.style.color = textColor;
      });

      const titleText = document.getElementById('titleText');
      titleText.textContent = config.title_text || defaultConfig.title_text;
      titleText.style.fontSize = `${baseSize * 3.25}px`;
      titleText.style.fontFamily = fontFamily;
      titleText.style.color = accentColor;

      const greetingMessage = document.getElementById('greetingMessage');
      greetingMessage.textContent = config.greeting_message || defaultConfig.greeting_message;
      greetingMessage.style.fontSize = `${baseSize * 2.375}px`;
      greetingMessage.style.fontFamily = fontFamily;
      greetingMessage.style.color = textColor;

      const appreciationText = document.getElementById('appreciationText');
      appreciationText.textContent = config.appreciation_text || defaultConfig.appreciation_text;
      appreciationText.style.fontSize = `${baseSize * 1.375}px`;
      appreciationText.style.fontFamily = fontFamily;
      appreciationText.style.color = textColor;

      const closingText = document.getElementById('closingText');
      closingText.textContent = config.closing_text || defaultConfig.closing_text;
      closingText.style.fontSize = `${baseSize * 1.25}px`;
      closingText.style.fontFamily = fontFamily;
      closingText.style.color = textColor;

      const studentNames = document.getElementById('studentNames');
      studentNames.textContent = config.student_names || defaultConfig.student_names;
      studentNames.style.fontSize = `${baseSize * 1.5}px`;
      studentNames.style.fontFamily = fontFamily;
      studentNames.style.color = accentColor;
    }

    function mapToCapabilities(config) {
      return {
        recolorables: [
          {
            get: () => config.background_color || defaultConfig.background_color,
            set: (value) => {
              config.background_color = value;
              if (window.elementSdk) {
                window.elementSdk.setConfig({ background_color: value });
              }
            }
          },
          {
            get: () => config.card_color || defaultConfig.card_color,
            set: (value) => {
              config.card_color = value;
              if (window.elementSdk) {
                window.elementSdk.setConfig({ card_color: value });
              }
            }
          },
          {
            get: () => config.text_color || defaultConfig.text_color,
            set: (value) => {
              config.text_color = value;
              if (window.elementSdk) {
                window.elementSdk.setConfig({ text_color: value });
              }
            }
          },
          {
            get: () => config.accent_color || defaultConfig.accent_color,
            set: (value) => {
              config.accent_color = value;
              if (window.elementSdk) {
                window.elementSdk.setConfig({ accent_color: value });
              }
            }
          }
        ],
        borderables: [],
        fontEditable: {
          get: () => config.font_family || defaultConfig.font_family,
          set: (value) => {
            config.font_family = value;
            if (window.elementSdk) {
              window.elementSdk.setConfig({ font_family: value });
            }
          }
        },
        fontSizeable: {
          get: () => config.font_size || defaultConfig.font_size,
          set: (value) => {
            config.font_size = value;
            if (window.elementSdk) {
              window.elementSdk.setConfig({ font_size: value });
            }
          }
        }
      };
    }

    function mapToEditPanelValues(config) {
      return new Map([
        ["title_text", config.title_text || defaultConfig.title_text],
        ["greeting_message", config.greeting_message || defaultConfig.greeting_message],
        ["appreciation_text", config.appreciation_text || defaultConfig.appreciation_text],
        ["closing_text", config.closing_text || defaultConfig.closing_text],
        ["student_names", config.student_names || defaultConfig.student_names]
      ]);
    }

    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities,
        mapToEditPanelValues
      });
    }
  </script>
